"""
.env Configuration Template for Universal Logging System
Copy this to .env and update values for your environment
"""

# ==============================================================================
# Application Configuration
# ==============================================================================
APP_NAME="Universal Logging System"
APP_VERSION="2.0"
DEBUG=True

# ==============================================================================
# Database Configuration
# ==============================================================================
# SQLite (default - good for development)
DATABASE_URL="sqlite:///./logging_system.db"

# PostgreSQL (for production)
# DATABASE_URL="postgresql://user:password@localhost:5432/logging_db"

# ==============================================================================
# Security Configuration
# ==============================================================================
SECRET_KEY="your-super-secret-key-change-in-production-12345678"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==============================================================================
# Email Configuration (for alerts)
# ==============================================================================
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SENDER_EMAIL="noreply@logging-system.com"

# ==============================================================================
# API Configuration
# ==============================================================================
API_KEY_PREFIX="uls_"
API_KEY_LENGTH=32
MAX_LOGS_PER_QUERY=10000
LOG_RETENTION_DAYS=30

# ==============================================================================
# WebSocket Configuration
# ==============================================================================
WEBSOCKET_MAX_CONNECTIONS=100
WEBSOCKET_PING_INTERVAL=30

# ==============================================================================
# Alert Configuration
# ==============================================================================
ALERT_CHECK_INTERVAL_SECONDS=60
ALERT_COOLDOWN_MINUTES=5

# ==============================================================================
# CORS Configuration
# ==============================================================================
CORS_ORIGINS="http://localhost:8000,http://localhost:3000,http://127.0.0.1:8000"
